<mvc:View
    controllerName="sap.crudle.crudle.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <!-- FORM TO ADD NEW ENTRY -->
            <VBox
                id="_IDGenVBox1"
                class="sapUiSmallMargin"
                width="30%"
            >
                <Label
                    id="_IDGenLabel"
                    text="ID"
                />
                <Input
                    id="_IDGenInput"
                    value="{/newItem/id}"
                    placeholder="Enter ID"
                />

                <Label
                    id="_IDGenLabel1"
                    text="Assignee"
                />
                <Input
                    id="_IDGenInput1"
                    value="{/newItem/name}"
                    placeholder="Enter Name"
                />

                <Label
                    id="_IDGenLabel2"
                    text="Assigned Work"
                />
                <Input
                    id="_IDGenInput2"
                    value="{/newItem/assignedWork}"
                    placeholder="Enter Work"
                />
                <Label
                    id="_IDGenLabel4"
                    text="Status"
                />
                <Select
                    id="_IDGenSelect"
                    selectedKey="{/newItem/status}"
                    items="{path: '/statuses'}"
                    width="100%"
                >
                    <core:Item
                        id="_IDGenItem"
                        key="{key}"
                        text="{text}"
                    />
                </Select>
                <Button
                    id="_IDGenButton"
                    text="{= ${/currentEditIndex} > -1 ? 'Update' : 'Add'}"
                    press="onAdd"
                    type="Emphasized"
                    class="sapUiSmallMarginTop"
                />
            </VBox>

            <!-- TABLE TO DISPLAY DATA -->
            <Table
                id="_IDGenTable"
                items="{/workItems}"
                inset="false"
                mode="None"
                class="sapUiResponsiveMargin"
                width="auto"
            >
                <headerToolbar>
                    <Toolbar id="_IDGenToolbar">
                        <Title
                            id="_IDGenTitle"
                            text="Work Items"
                        />
                    </Toolbar>
                </headerToolbar>

                <columns>
                    <Column id="_IDGenColumn">
                        <Text
                            id="_IDGenText"
                            text="ID"
                        />
                    </Column>
                    <Column id="_IDGenColumn1">
                        <Text
                            id="_IDGenText1"
                            text="Name"
                        />
                    </Column>
                    <Column id="_IDGenColumn2">
                        <Text
                            id="_IDGenText2"
                            text="Assigned Work"
                        />
                    </Column>
                    <Column id="_IDGenColumn3">
                        <Text
                            id="_IDGenText3"
                            text="Status"
                        />
                    </Column>
                    <Column
                        id="_IDGenColumn4"
                        hAlign="Center"
                    >
                        <Text
                            id="_IDGenText4"
                            text="Actions"
                        />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem id="_IDGenColumnListItem">
                        <cells>
                            <Text
                                id="_IDGenText5"
                                text="{id}"
                            />
                            <Text
                                id="_IDGenText6"
                                text="{name}"
                            />
                            <Text
                                id="_IDGenText7"
                                text="{assignedWork}"
                            />
                            <Text
                                id="_IDGenText8"
                                text="{status}"
                            />
                            <HBox
                                id="_IDGenHBox1"
                                alignItems="Center"
                                justifyContent="Center"
                                renderType="Bare"
                                fitContainer="true"
                                class="sapUiSmallMarginBeginEnd"
                            >
                                <Button
                                    id="_IDGenButton1"
                                    icon="sap-icon://edit"
                                    press="onEdit"
                                    type="Emphasized"
                                    tooltip="Edit"
                                />
                                <Button
                                    id="_IDGenButton2"
                                    icon="sap-icon://delete"
                                    press="onDelete"
                                    type="Reject"
                                    tooltip="Delete"
                                    class="sapUiTinyMarginBegin"
                                />
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
            <Panel
                id="_IDGenPanel1"
                headerText="Task History"
                expandable="true"
                expanded="false"
                class="sapUiSmallMarginTop"
            >
                <List
                    id="_IDGenList"
                    items="{/historyLog}"
                >
                    <CustomListItem id="_IDGenCustomListItem">
                        <HBox
                            id="_IDGenHBox"
                            alignItems="Center"
                            justifyContent="Start"
                        >
                            <!-- Icon for action -->
                            <core:Icon
                                id="_IDGenIcon"
                                src="{= ${action} === 'Created' ? 'sap-icon://add' : ${action} === 'Updated' ? 'sap-icon://edit' : 'sap-icon://delete' }"
                                color="{= ${action} === 'Created' ? 'Positive' : ${action} === 'Updated' ? 'Neutral' : 'Negative' }"
                                size="1.5rem"
                                class="sapUiSmallMarginEnd"
                            />
                            <!-- Action + Timestamp -->
                            <VBox id="_IDGenVBox">
                                <Text
                                    id="_IDGenText9"
                                    text="{parts: [{path: 'action'},{path: 'item'},{path: 'timestamp'}], formatter: '.formatHistoryEntry'}"
                                />
                            </VBox>
                        </HBox>
                    </CustomListItem>
                </List>
            </Panel>
        </content>
    </Page>
</mvc:View>
